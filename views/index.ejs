<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.3.0/fonts/remixicon.css"
    rel="stylesheet"
/>
</head>
<body>
    <%- include('./partials/header.ejs') %>
    <div class="px-20 mb-10">
    <h3 class="font-bold mb-5 text-2xl">All Hisaab Kitaab</h3>
    <div class="allfiles flex flex-wrap gap-5">
    <% khatas.forEach(function(khata) { %>
        
            <div class="file-item px-6 py-4 w-[32%] bg-zinc-100 hover:bg-zinc-300 mt-5 rounded-md text-white flex flex-col justify-between text-xl">
                <div class="flex w-full justify-between gap-5 items-center mb-4">
                    <div>
                        <%- khata.encrypted ? 
                        '<span class="bg-blue-500 rounded-md p-2 text-sm mr-3"> <i class="ri-lock-line font-medium"></i> Encrypted </span>' :
                        '<span class="bg-green-600 rounded-md p-2 text-sm mr-3"> <i class="ri-check-line font-bold"></i> Available </span>' %>
                        <%- khata.shareable ?
                        '' :
                        '<span class="bg-zinc-300 rounded-md p-2 text-sm text-black"><i class="ri-eye-off-line"></i></span>' %>
                    </div>
                    <div class="text-sm text-zinc-500 font-medium">Created on <%= khata.filename %> </div>
                </div>
                
                <h2 class="text-black font-medium mb-2"><%= khata.title %></h2>
                <a class="text-zinc-500 text-xs font-bold" href="/hisaab/<%= khata._id %>">view hisaab</a>
            </div>
        
    <% }) %>
    </div>
    </div>
</body>
</html>